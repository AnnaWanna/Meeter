@model Meeter.Models.Event
@{
    ViewData["Title"] = "EventCreate";
}


<div class="row page-box">
    <div class="col-sm-12">
        <h2>New Event</h2>
        @using (Html.BeginForm("Create"))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.EventName)
                @Html.EditorFor(m => m.EventName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.EventName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DateTime)
                <div class="input-group">
                    @Html.EditorFor(m => m.DateTime, new { htmlAttributes = new { @class = "form-control", type = "Date" } })
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.DateTime, "", new { @class = "text-danger" })
            </div>

            @Html.HiddenFor(m => m.GroupId)


            <div class="form-group">

                <button type="submit" class="btn btn-primary">Create</button>

            </div>

        }
    </div>

</div>

