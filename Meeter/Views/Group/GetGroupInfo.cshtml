@model Group
@{
    ViewData["Title"] = "Group Info";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <div class="d-flex align-items-center">
            <div class="pr-3" style="font-size: 25px">
                <a href="@Url.Action("Secret", "Meeter")">
                    <i class="fas fa-chevron-circle-left"></i>
                </a>
            </div>
            <h3 class="mb-1">
                Group Info
            </h3>
        </div>
    </div>

    <div class="pt-2">
        <div>
            <div class="offer-details">
                <h4 class="mb-0 mt-2">@Model.Name</h4>

                <label>Creator:</label>
                <div class="content">@ViewData["CreatorName"]</div>

                <div class="pt-4">
                    <a href="@Url.Action("AddMember","Group", new {id= Model.Id })"
                       class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus pr-2"></i>Add Group Member
                    </a>
                    <a href="@Url.Action("Delete", new {id= Model.Id })"
                       class="btn btn-lg btn-danger mx-2">
                        <i class="fas fa-trash-alt pr-2"></i>Delete this group
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Location</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var member in Model.Memberships)
                {
                    <tr>

                        <td>@member.User.FirstName</td>
                        <td>@member.User.LastName</td>
                        <td>@member.User.Email</td>
                        <td>@member.User.PhoneNumber</td>
                        <td>@member.User.Location</td>
                        @*<td>
                            <a asp-action="AddPreference" asp-route-id="@member.Id">Add preference</a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>

        <div class="pt-4">
            <a href="@Url.Action("Create","Event", new {id= Model.Id })"
               class="btn btn-primary btn-lg"><i class="fa fa-calendar-plus pr-2"></i>Create Event</a>
        </div>

