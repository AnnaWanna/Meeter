            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Event Name</th>
                        <th scope="col">Date Time</th>
                        <th scope="col">Place</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var eve in Model.Events)
                    {
                        <tr>

                            <td>@Html.ActionLink(eve.Id.ToString(), "GetEventInfo", "Event", new { id = eve.Id })</td>
                            <td>@eve.EventName</td>
                            <td>@eve.DateTime</td>
                            <td>@eve.Place</td>
                            @*<td>
                                <a asp-action="AddPreference" asp-route-id="@eve.Id">Add preference</a>
