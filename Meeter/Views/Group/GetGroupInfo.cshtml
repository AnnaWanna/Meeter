@model Group
@{
    ViewData["Title"] = "GetGroupInfo";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <div class="d-flex align-items-center">
            <div class="pr-3" style="font-size: 25px">
                <a href="@Url.Action("Index", "Meeter")">
                    <i class="fas fa-chevron-circle-left"></i>
                </a>
            </div>
            <h3 class="mb-1">
                Group Info
            </h3>
        </div>
    </div>

    <div class="pt-2">
        <div>
            <div class="offer-details">
                <h4 class="mb-0 mt-2">@Model.Name</h4>

                <label>Creator:</label>
                <div class="content">@ViewData["CreatorName"]</div>


                <div class="pt-4">
                    <a href="@Url.Action("Create","Event", new {id= Model.Id })"
                       class="btn btn-primary btn-lg">Create Event</a>
                    @*<a asp-action="Edit" asp-route-id="@Model.Id">
                        <button class="btn btn-rounded btn-primary mx-2">
                            <i class="fas fa-edit pr-2"></i>
                            Edit
                        </button>
                    </a>*@

                    <button class="btn btn-rounded btn-danger mx-2"
                            data-toggle="modal"
                            data-target="#confirm-delete">
                        <i class="fas fa-trash-alt pr-2"></i>
                        Delete
                    </button>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var member in Model.Memberships)
                {
                    <tr>

                        <td>@member.User.UserName</td>
                        <td>@member.User.LastName</td>
                        <td>@member.User.Location</td>
                        <td>@member.User.PhoneNumber</td>
                        @*<td>
                            <a asp-action="AddPreference" asp-route-id="@member.Id">Add preference</a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("AddMember","Group", new {id= Model.Id })"
           class="btn btn-primary btn-lg">Add Group Member</a>
        @*<div>
            @using (Html.BeginForm("GetGroupInfo", "Group", FormMethod.Get,new { groupid=Model.Id}))
            {
                <div class="input-group search-input"
                     style="border-radius: 20px">
                    <input name="search"
                           type="text"
                           class="form-control"
                           placeholder="Search by offer title.."
                           aria-label="Search by offer title"
                           aria-describedby="button-search">
                    <div class="input-group-append">
                        <button id="button-search"
                                class="btn btn-primary"
                                type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            }
        </div>*@
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Event Name</th>
                    <th scope="col">Date Time</th>
                    <th scope="col">Place</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var eve in Model.Events)
                {
                    <tr>

                        <td>@eve.Id</td>
                        <td>@eve.EventName</td>
                        <td>@eve.DateTime</td>
                        <td>@eve.Place</td>
                        @*<td>
                            <a asp-action="AddPreference" asp-route-id="@eve.Id">Add preference</a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
        <br />
        @Html.ActionLink("Go back to Profile", "GetUserProfile", "Meeter", null, new { @class = "btn btn-primary" })
    </div>
</div>