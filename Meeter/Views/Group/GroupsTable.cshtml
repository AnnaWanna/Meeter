@model IEnumerable<Group>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Group</th>
            <th scope="col">Creator</th>
            <th scope="col">Events</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@Html.ActionLink(group.Name, "GetGroupInfo", "Group", new { id = group.Id }, new { @class = "btn btn-dark" })</td>
                <td>@Html.DisplayFor(modelItem => group.Creator.FullName)</td>
                <td>
                    <table>
                        @foreach (var @event in group.Events)
                        {
                            <tr>
                                <td>@Html.ActionLink(@event.EventName, "GetEventInfo", "Event", new { id = @event.Id })</td>
                                <td>@Html.DisplayFor(modelItem => @event.DateTime)</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>